<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:diy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.handle.law.component.view.MainTabView
            android:id="@+id/tb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            diy:iconDrawable="@drawable/main_homeb"
            diy:text="@string/main_tab_text_home"
            diy:textColor="@color/gray_dark" />

        <com.handle.law.component.view.MainTabView
            android:id="@+id/tb_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            diy:iconDrawable="@drawable/main_postb"
            diy:text="@string/main_tab_text_post"
            diy:textColor="@color/gray_dark" />

        <com.handle.law.component.view.MainTabView
            android:id="@+id/tb_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            diy:iconDrawable="@drawable/main_chatb"
            diy:text="@string/main_tab_text_chats"
            diy:textColor="@color/gray_dark" />

        <com.handle.law.component.view.MainTabView
            android:id="@+id/tb_contacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            diy:iconDrawable="@drawable/main_contactsb"
            diy:text="@string/main_tab_text_contacts"
            diy:textColor="@color/gray_dark" />

        <com.handle.law.component.view.MainTabView
            android:id="@+id/tb_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            diy:iconDrawable="@drawable/main_mydealsb"
            diy:text="@string/main_tab_text_settings"
            diy:textColor="@color/gray_dark" />
    </LinearLayout>

</LinearLayout>
