<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--第一块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/dynamic_zone_body_avatar_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_post_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布人的昵称"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_post_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天 16:45"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dynamic_body_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text=" 如果你无法简洁的表达你的想法"/>
    <GridView
        android:id="@+id/gv_dynamic_body_picture_grid_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>

</LinearLayout>